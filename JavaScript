/**
 * Função para mostrar a aba selecionada.
 * Gerencia a visibilidade do conteúdo e o estilo ativo do botão.
 * @param {string} tabId - O ID do conteúdo da aba a ser exibido.
 */
function showTab(tabId) {
    // Esconde todos os conteúdos das abas
    document.querySelectorAll('.tab-content').forEach(content => {
        content.classList.add('hidden');
    });

    // Remove o estilo ativo de todos os botões
    document.querySelectorAll('.tab-button').forEach(button => {
        // Classes ativas (Tailwind)
        button.classList.remove('bg-secondary-green', 'text-white', 'border-b-4', 'border-accent-yellow');
        // Classes inativas (Tailwind)
        button.classList.add('text-primary-dark/80', 'hover:bg-primary-dark/10');
    });

    // Mostra o conteúdo da aba selecionada
    const activeContent = document.getElementById(tabId);
    if (activeContent) {
        activeContent.classList.remove('hidden');
    }

    // Adiciona o estilo ativo ao botão clicado
    const activeButton = document.querySelector(`.tab-button[data-tab="${tabId}"]`);
    if (activeButton) {
        // Remove classes inativas
        activeButton.classList.remove('text-primary-dark/80', 'hover:bg-primary-dark/10');
        // Adiciona classes ativas
        activeButton.classList.add('bg-secondary-green', 'text-white', 'border-b-4', 'border-accent-yellow');
    }
}

// Garante que a primeira aba ("tab-o-que-sao") seja mostrada ao carregar a página
window.onload = () => showTab('tab-o-que-sao');